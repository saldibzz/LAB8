@model MusicApp2017.Models.ApplicationUser

@{
    ViewData["Title"] = "EditProfile";
    var successmessage = ViewData["successmessage"];
}

<h2>EditProfile</h2>

<form asp-action="EditProfile">
    <div class="form-horizontal">
        <h4>ApplicationUser</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FavoriteGenre" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FavoriteGenre" class="form-control" />
                <span asp-validation-for="FavoriteGenre" class="text-danger"></span>
            </div>
        </div>
    <input type="hidden" asp-for="Id" />
        
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <p>@successmessage;</p>
        
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
